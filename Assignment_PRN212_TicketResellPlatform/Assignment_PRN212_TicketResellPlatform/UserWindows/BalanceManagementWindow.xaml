                <Border Margin="264,166,42,306" Background="#FFC1EDFF" Panel.ZIndex="-1" />
                <ComboBox x:Name="amountDepositeComboBox" FontSize="16" Margin="264,380,616,0" VerticalAlignment="Top" Height="47">
                    <ComboBoxItem IsSelected="True">10.000đ</ComboBoxItem>
                    <ComboBoxItem>20.000đ</ComboBoxItem>
                    <ComboBoxItem>50.000đ</ComboBoxItem>
                    <ComboBoxItem>100.000đ</ComboBoxItem>
                    <ComboBoxItem>200.000đ</ComboBoxItem>
                    <ComboBoxItem>500.000đ</ComboBoxItem>
                </ComboBox>
                <Button Foreground="#DD000000" Background="#FFD8C5FA" BorderBrush="#FFA57BF0" Content="Nạp tiền" Margin="264,450,616,178" Click="HandleDeposite"/>

