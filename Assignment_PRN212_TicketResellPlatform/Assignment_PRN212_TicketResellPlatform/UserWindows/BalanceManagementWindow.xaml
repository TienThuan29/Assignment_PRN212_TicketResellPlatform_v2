                <TextBlock FontSize="16" Margin="958,451,126,177">10.000đ</TextBlock>

                <TextBlock FontSize="16" Margin="958,488,126,140">20.000đ</TextBlock>
                <TextBlock FontSize="16" Margin="662,489,422,139">20.000đ</TextBlock>

                <TextBlock FontSize="16" Margin="662,526,422,102">50.000đ</TextBlock>
                <TextBlock FontSize="16" Margin="958,527,126,101">50.000đ</TextBlock>

                <TextBlock FontSize="16" Margin="958,564,126,64">100.000đ</TextBlock>
                <TextBlock FontSize="16" Margin="662,565,422,63">100.000đ</TextBlock>

                <TextBlock FontSize="16" Margin="662,597,422,31" Text="...."/>


                <Button HorizontalAlignment="Left" Margin="17,581,0,0" VerticalAlignment="Top" Width="54">
                    <materialDesign:PackIcon Kind="ExitRun" Height="24" Width="24" />
                </Button>

            </Grid>
        </Border>

    </Grid>
</Window>
